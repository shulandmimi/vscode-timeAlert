{
  "name": "timealert",
  "displayName": "timeAlert",
  "description": "每隔一定时间提醒所要做的任务",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:timealert.addTask",
    "onCommand:timealert.delTask",
    "onView:TimeAlert",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "timealert.addTask",
        "title": "addTask"
      },
      {
        "command": "timealert.delTask",
        "title": "delTask"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "TimeAlert",
          "title": "任务",
          "icon": "/public/image/task.svg"
        }
      ]
    },
    "views": {
      "TimeAlert": [
        {
          "id": "TimeAlert",
          "name": "任务列表"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "changelog": "./node_modules/.bin/conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "fs-extra": "^9.0.1"
  }
}