{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"rootDir": "./",
		"strict": true,   /* enable all strict type-checking options */
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@root/*": ["./*"]
		}
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"include": [
		"./build",
		"./src",
		"./webview"
	]
}
